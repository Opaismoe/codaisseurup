<div class="panel panel-primary">
  <div class="panel-heading">
    <h2><%= @event.name %></h2>
    <h4><%= @event.description %></h4>

  </div>

  <div class="panel-body">
    <div class="col-md-10">
    <label>Number of guests <br>
    <label class="capacity-number"><%=  @event.capacity %></label>
    <br>
    <hr>

    <label>Starts at: <%= @event.starts_at %></label>
    <br>

    <label>Ends at: <%= @event.ends_at %></label>
    <br>

    <label>Location:</label> <%= @event.location %>
    <br>

    <label>Price: â‚¬</label> <%= @event.price %>
    <br>

    <label>Capacity:</label> <%= @event.capacity %>
    <br>

    <%= !@event.includes_food ? ("<s>Food included</s>").html_safe : "Food included" %>
    <br>

    <%= !@event.includes_drinks ? ("<s>Drinks included</s>").html_safe : "Drinks included" %>
    <br>

    <label>Status:</label> <%= @event.active %>
    <br>

    <h4>Categories</h4>
    <% @categories.each do |category| %>
      <span class="label label-success"><%= category.name %></span>
    <% end %>
    <hr>

    <label>Photos</label>
    <% @event.photos.each do |photo| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= image_tag photo.image.thumbnail %>
      </div>
    </div>
    <% end %>

    <br>
    <hr>
    <%= link_to "Back", events_path, class: "btn btn-default" %>
    <%= link_to "Update", edit_event_path, class: "btn btn-default" %>

    </div>
  </div>
</div>
